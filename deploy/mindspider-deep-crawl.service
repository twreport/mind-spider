[Unit]
Description=MindSpider Deep Crawl Service
After=network.target mysql.service mongodb.service redis.service
Wants=mysql.service mongodb.service redis.service

[Service]
Type=simple
User=root
WorkingDirectory=/deploy/parallel-universe/mind-spider
Environment="PATH=/root/anaconda3/envs/mind-spider/bin:/root/anaconda3/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
ExecStart=/root/anaconda3/envs/mind-spider/bin/python DeepSentimentCrawling/start_deep_crawl.py --port 8777
Restart=always
RestartSec=10
StandardOutput=append:/deploy/parallel-universe/mind-spider/logs/deep_crawl.log
StandardError=append:/deploy/parallel-universe/mind-spider/logs/deep_crawl.log

[Install]
WantedBy=multi-user.target
